<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TestApp.Properties"
        Title="MainWindow" Height="350" Width="525" Closed="onWindowClosed">
    <Window.Resources>
        <!-- Language resource for I18N -->
        <local:Resources x:Key="Resources" />
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="40" />
        </Style>
        <!-- Start/Stop button with label refer language resource -->
        <Style x:Key="StartStopButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=VideoPreview.IsStarted}" Value="False">
                    <Setter Property="Content" Value="{Binding Path=MainWindow_VideoPreviewStartButton, Source={StaticResource Resources}}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=VideoPreview.IsStarted}" Value="True">
                    <Setter Property="Content" Value="{Binding Path=MainWindow_VideoPreviewStopButton, Source={StaticResource Resources}}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- XML data which provides Start/Stop image and device type -->
        <XmlDataProvider x:Key="DeviceControlData">
            <x:XData>
                <Devices xmlns="">
                    <Device Type="Camera">
                        <Action Type="Start">
                            <Image>/Resources/Start.png</Image>
                        </Action>
                        <Action Type="Stop">
                            <Image>/Resources/Stop.png</Image>
                        </Action>
                    </Device>
                </Devices>
            </x:XData>
        </XmlDataProvider>

        <!-- DataTemplate to switch Start/Stop by referring DeviceControlData XML resource -->
        <DataTemplate x:Key="DeviceControlTemplate">
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="DataContext" Value="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                <Setter Property="Tag" Value="{Binding XPath=Action[@Type\=\'Stop\']}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="False">
                                <Setter Property="Tag" Value="{Binding XPath=Action[@Type\=\'Start\']}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <Label Content="{Binding XPath=@Type}"
                        DataContext="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=Tag}" />
                <Image Source="{Binding XPath=Image}"
                        DataContext="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Tag}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <!-- BUtton control for I18N -->
            <Button Command="{Binding Path=StartStopCommand}"
                    Style="{StaticResource ResourceKey=StartStopButton}" />
            <Separator />

            <!-- ToggleButton control for XmlDataProvider and DataTemplate -->
            <ToggleButton ContentTemplate="{StaticResource DeviceControlTemplate}"
                          Tag="{Binding Source={StaticResource DeviceControlData}, XPath=Devices/Device[@Type\=\'Camera\']}"
                          IsChecked="{Binding Path=IsCameraActive}"
                          Name="StartStopToggleButton"/>
            <Separator />
            <Label>Language</Label>
            <ComboBox ItemsSource="{Binding Path=Cultures}" DisplayMemberPath="DisplayName"
                      SelectedItem="{Binding Path=Settings.CultureInfo}"
                      MinWidth="80"/>
        </ToolBar>
        <Border Grid.Row="1" Name="VideoArea" />
    </Grid>
</Window>
